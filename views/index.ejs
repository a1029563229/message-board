<%- include header %>
<%- include err %>
<div class="container-fluid">
	<% if (posts.length > 0) { %>
		<% posts.forEach(function (value, index) { %>
		<div class="row pl_detail">
			<div class="col-xs-3 text-center">
				<div>
					<img class="img-responsive" src="../images/12.jpg" alt="">
				</div>
				<div class="text-center pl_detail_name">
					<%= value.name %>
				</div>
			</div>
			<div class="col-xs-9 pl_detail_pl">
				<div class="pl_detail_pl_content">
					<%= value.post %>
				</div>
				<div class="pl_detail_pl_time">
					<%= value.time.minute %>
				</div>
			</div>
		</div>
		<% }) %>
	<% } %>
</div>
<div class="container-fluid">
	<div class="row post_detail">
		<div class="col-xs-12">
			<form action='/' method="post">
				<div class="form-group">
					<textarea class="form-control" rows="3" placeholder="请输入您的评论内容" name="docs"></textarea>
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-success btn-block">
						提交
					</button>
				</div>
			</form>
		</div>
	</div>
</div>